<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BindingLayout.NewPage1"
             Title="NewPage1">
    <VerticalStackLayout Padding="10">
        <Image
            x:Name="Image"/>
        <Label
            FontSize="20"
            HorizontalOptions="CenterAndExpand"
            x:Name="Name"/>
        <Label 
            FontSize="20"
            HorizontalOptions="CenterAndExpand"
            x:Name="Surname"/>
        <Label 
            FontSize="20"
            HorizontalOptions="CenterAndExpand"
            x:Name="ThirdName"/>
        <Label 
            FontSize="20"
            HorizontalOptions="CenterAndExpand"
            x:Name="label"/>
    </VerticalStackLayout>
</ContentPage>