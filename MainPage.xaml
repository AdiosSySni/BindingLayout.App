<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BindingLayout.MainPage">
    

    <ScrollView>
        <VerticalStackLayout Padding="10">
            <Entry x:Name="NameEntry" Placeholder="Введите имя"/>
            <Entry x:Name="SurnameEntry" Placeholder="Введите фамилию"/>
            <Entry x:Name="ThirdNameEntry" Placeholder="Введите отчество"/>


            <!--<Image
                x:Name="myImage"
                HeightRequest="200"
                HorizontalOptions="Center"
                />
            <Button
                x:Name="PickImage"
                Text="Выберите изображение"
                WidthRequest="200"
                Clicked="FilePickerButton"
                />-->

            <Entry
                x:Name="ImageURL"
                Placeholder="Введите ссылку на изображение"/>

            <Button
                x:Name="NextPage"
                Text="Перейдите на 1 страницу"
                WidthRequest="200"
                Clicked="ClickButton"
                />
            
            <Button
                x:Name="GoToSecondPage"
                Margin="10"
                Text="Перейдите на 2 страницу"
                WidthRequest="200"
                Clicked="SecondPage"
                />
            
        </VerticalStackLayout>
        
    </ScrollView>
    
</ContentPage>
