<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BindingLayout.NewPage2"
             Title="NewPage2">
    <VerticalStackLayout>
        <VerticalStackLayout BindableLayout.ItemsSource="{Binding Test}">
            <BindableLayout.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding .}"></Label>
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </VerticalStackLayout>
        <Button Text="Click" Clicked="OnClicked" BackgroundColor="Bisque" />
    </VerticalStackLayout>
</ContentPage>